    function myfunction() {
        const todo = {
            name: "Sooraj",
            email: "ragesh@gmail.com",
            address: "25 crestwood"
        }

        fetch('/api/user', {
            method: 'POST',
            body: JSON.stringify(todo),
            headers: {
                'Content-type': 'application/json; charset=UTF-8'
            }
        });

    }
</script>